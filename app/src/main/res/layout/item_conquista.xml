<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_card_locked"
    android:padding="18dp"
    android:layout_marginBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_hover_elevation">

    <!-- Título com ícone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconConquista"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_trophy"
            android:layout_marginEnd="8dp"
            app:tint="#B37AFF" />

        <TextView
            android:id="@+id/tvTituloConquista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRIMEIRO SALÁRIO"
            android:textColor="#D6B8FF"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDescricaoConquista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recebeu sua primeira receita"
        android:textColor="#CCCCCC"
        android:textSize="13sp"
        android:layout_marginTop="4dp" />

</LinearLayout>
