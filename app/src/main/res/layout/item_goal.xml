<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#241B3F"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#241B3F"
    android:clipToOutline="true"
    android:elevation="4dp"
    android:layout_marginHorizontal="0dp"
    android:layoutDirection="ltr">

    <!-- Cabeçalho com ícone e nome da meta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgGoalIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            app:tint="#B968FF" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup Gamer"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvGoalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC + Monitor + Periféricos"
                android:textColor="#A0A0B8"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Progresso -->
    <TextView
        android:id="@+id/tvProgressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROGRESSO"
        android:textColor="#A0A0B8"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvProgressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 2.850 / R$ 8.000"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"/>

    <ProgressBar
        android:id="@+id/progressGoal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:progressBackgroundTint="#2E214A"
        android:progressTint="@color/purple_500" />


    <TextView
        android:id="@+id/tvProgressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35.6% COMPLETO"
        android:textColor="#B968FF"
        android:textSize="12sp"
        android:layout_gravity="end"/>
</LinearLayout>
