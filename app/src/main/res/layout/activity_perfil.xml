<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A1A">

    <!-- Conteúdo rolável -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD DO PERFIL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#12122A"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvPerfilTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERFIL DO JOGADOR"
                        android:textColor="#BB86FC"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:letterSpacing="0.05"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/imgPerfil"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/bg_avatar"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tvNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JOÃO SILVA"
                        android:textColor="#BB86FC"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tvNivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL 7 - TRADER INICIANTE"
                        android:textColor="#6A6AFF"
                        android:textSize="13sp"
                        android:layout_gravity="center_horizontal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#222"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Estatísticas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <!-- Linha: TOTAL GUARDADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TOTAL GUARDADO"
                                android:textColor="#AAA"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tvTotalGuardado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 45.250,00"
                                android:textColor="#BB86FC"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Linha: METAS COMPLETADAS -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="METAS COMPLETADAS"
                                android:textColor="#AAA"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tvMetas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="#BB86FC"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Linha: CONQUISTAS -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CONQUISTAS"
                                android:textColor="#AAA"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tvConquistas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="#BB86FC"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD DE CARTÕES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_gradient"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÚMERO DO CARTÃO"
                        android:textColor="#BB86FC"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvNumeroCartao1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**********************"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Linha de títulos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VALIDADE"
                            android:textColor="#BB86FC"
                            android:textSize="13sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CÓD. DE SEGURANÇA"
                            android:textColor="#BB86FC"
                            android:textSize="13sp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <!-- Linha de valores -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="2"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvValidade"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12/28"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvCvv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="***"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="end"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PayPal"
                        android:textColor="#BB86FC"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD DE ADICIONAR CARTÃO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddCartao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                android:stateListAnimator="@animator/card_hover_elevation"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#12122A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_dashed">

                    <TextView
                        android:id="@+id/btnAddCartao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="28sp"
                        android:textColor="#BB86FC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADICIONAR CARTÃO"
                        android:textColor="#CCCCCC"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- NavBar Inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1C1433"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


