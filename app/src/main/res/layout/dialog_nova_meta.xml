<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E2A"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOVA META FINANCEIRA"
            android:textColor="#B968FF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título da meta"
            android:inputType="text"
            android:backgroundTint="#B968FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#8A8A8A"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:inputType="text"
            android:backgroundTint="#B968FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#8A8A8A"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edtAtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor atual (R$)"
            android:inputType="numberDecimal"
            android:backgroundTint="#B968FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#8A8A8A"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edtAlvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meta final (R$)"
            android:inputType="numberDecimal"
            android:backgroundTint="#B968FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#8A8A8A"
            android:layout_marginBottom="16dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALVAR"
            android:textAllCaps="true"
            android:backgroundTint="#B968FF"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
